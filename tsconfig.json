{
	"compileOnSave": false,
	"files": ["./src/index.ts"],
	"exclude": ["dist", "node_modules", "**/*/node_modules"],
	"compilerOptions": {
		"outDir": "./dist",
		"sourceMap": true,
		"declaration": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2016", "dom", "es2017.object"],
		"removeComments": true
	}
}
